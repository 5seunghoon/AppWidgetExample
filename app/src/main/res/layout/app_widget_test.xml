<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#09C" android:orientation="vertical">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_margin="16">

        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/app_widget_button"
                android:layout_marginEnd="0dp" android:layout_marginStart="0dp"
                android:backgroundTint="@android:color/white" android:layout_gravity="center"/>
        <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appwidget_text"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:contentDescription="@string/appwidget_text"
                android:background="#09C"/>
    </LinearLayout>


</LinearLayout>